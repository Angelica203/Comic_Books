<h1>Your Comic</h1>

<h2><%= @comic.title  %></h2>

<p>Category: <%= @comic.category %></p>

<p>Published: <%= @comic.published %></p>

 <%= number_to_currency(@comic.price) %><br><br> 


 <% if @comic.user == current_user %>
    <%= link_to('edit comic', edit_comic_path(@comic)) %><br>
   <%= link_to('delete comic', comic_path(@comic), method: 'delete') %><br>
<% end %> 

<%= link_to('purchase comic', new_comic_purchase_path(@comic)) %><br>
<%= link_to('view purchases', comic_purchases_path(@comic)) %>

