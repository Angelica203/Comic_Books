<h3>New Comic</h3>

<%= form_for(@comic) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :category %>
    <%= f.text_field :category %>
    <%= f.label :published %>
    <%= f.text_field :published %>
    <%= f.label :price %>
    <%= f.number_field :price %>
    <%= f.submit %>

<% end %>

